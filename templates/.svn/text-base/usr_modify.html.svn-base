{% extends "base_site.html"%}
{% block content %}

   	  <div class="conment-title">个人信息</div>
            
            <div class="conment-div">
            	
                <div class="div">
									<form action="" method="post">	
                    
                        	<table width="100%" border="0" cellspacing="0" cellpadding="0" class="tab">
                              <tbody>
											<tr>
                                    <th width="15%">姓名：</th>
												<td>{{name}}</td>
                                 </tr>
                                {% for field in form %}
              							
											<tr>
        			                     <th width="15%">
										  {% if forloop.counter != 0 and forloop.counter < 4%}
										 <span style="color:red">* </span>
										 {% endif %}
										 {{ field.label }}：</th>
        			 							<td>{{ field }}  {{ field.help_text }}
													{% for error in field.errors %} 
													    <span class="error"> {{error}}</span>
													{% endfor %}
                                        
                                  
											  {% endfor %}
																	
                              </tbody>
                            </table>                        
                        	<div class="div_page">                           
                                <div class="bn_bn"><button type="submit"  class="switch_bn">提交</button></div>
                            </div> 
									</form>
                    
                    
                </div>
                
            </div>
            
      </div>
    </div>
		{% endblock %}
