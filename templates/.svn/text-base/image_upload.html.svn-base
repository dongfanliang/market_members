{% extends "base_site.html" %}
{% block content %}

<style type="text/css"> 
*{padding:0;margin:0} 
.pop1{z-index:1;background-color:#CCCCCC;opacity:0.5;filter:Alpha(opacity=50);-moz-opacity:.5;width:100%;height:100%;position:absolute;left:0px;top:0px;display:none}
.pop2{z-index:2;background-color:white;position:absolute;left:40%;top:40%;width:300px;height:100px;display:none} 
</style> 


<div id="pop1" class="pop1"></div> 
<div id="pop2" class="pop2" ><br><br><center><span style="font-size:18px; font-weight:bold; font-family:simsun;">文件正在上传........</span></center> </div>

<div class="conment" id="content">
	<div class="conment-title">镜像上传</div>
		<div class="conment-div">
			<div class="div">
			  <form id="uploadForm" action="" method="POST" enctype="multipart/form-data">{% csrf_token %}     	
				
                        	<table width="100%" border="0" cellspacing="0" cellpadding="0" class="tab">                            
								
                              <tbody>
                                  <tr>
									<th width="15%">Kernel：</th>
									<td><input type="file" id="eki_file" name="eki_file"  value="{{eki_file}}"/><span style="color:red;FONT-SIZE:12px;margin-left:10px;">注：请指定正确的内核镜像文件！</span></td>
								  </tr>
                                  <tr>
                                    <th>Ramdisk：</th>
                                    <td><input type="file" id="eri_file" name="eri_file" value="{{ eri_file }}"/><span style="color:red;FONT-SIZE:12px;margin-left:10px;">注：请指定正确的ramdisk镜像文件！</span></td>
                                  </tr>
                                  <tr>
                                    <th>Rootfs：</th>
                                    <td><input type="file" id="emi_file" name="emi_file" value="{{ emi_file }}"/><span style="color:red;FONT-SIZE:12px;margin-left:10px;">注：请指定正确的镜像文件（镜像文件的扩展名通常为.img）！</span></td>
                                  </tr>
                             </tbody>
							</table>                        
                        	
                        </form>
			 <div class="div_page">    
										<div class="bn_bn">     
                                  <button type="submit" onclick="check_file('eki_file', 'eri_file', 'emi_file', 'uploadForm', '/image_upload/','pop1' ,'pop2')" class="switch_bn">上传</button>
                      <!--            <input name="button" onclick="javascript:history.go(-1);" type="button" class="switch_bn" value="取消" />-->
											<button type="back" onclick="window.location.href='/image/'" class="switch_bn">取消</button>
                                </div>
                            </div>
                </div>            
            </div>
      </div>
    </div>

{% endblock %}
