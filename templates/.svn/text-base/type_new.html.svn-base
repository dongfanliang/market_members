{% extends "base_site.html" %}
{% block content %}
<div class="conment">
   	  <div class="conment-title">新建资源类型</div>
           
            <div class="conment-div">
            	
              <div class="div">
                	<form method="POST">{% csrf_token %}
                   
                        	<table width="100%" border="0" cellspacing="0" cellpadding="0" class="tab">
  			     					<tbody>
                              <tr>
                                 <th width="15%">模板名称：</th>
                                 <td><input type="" id="" onblur="" name="name"></td>
                              </tr>
                              <tr>
                                 <th>CPU个数（个）：</th>
                                 <td><input type="" id="" onblur="" name="cpu"></td>
                              </tr>
                              <tr>
                                 <th>内存（M）：</th>
                                 <td><input type="" id="" onblur="" name="mem"></td>
                              </tr>
                              <tr>
                                 <th>硬盘(G)：</th>
                                 <td><input type="" id="" onblur="" name="disk"></td>
                              </tr>
																{% if error %}
																 <tr >
																		<td>
																			<span class="error">{{ error }}</span>
																		</td></tr>
			    													{% endif%}
                            </tbody>
                            </table>
                        	<div class="div_page">                           
                                <div class="bn_bn"><button type="submit" onclick="" class="switch_bn">提交</button><button type="button" onclick="window.location='/typelist'" class="switch_bn">返回</button></div>
                            </div>
                        
								</form>
              </div>
                
            </div>
            
        </div>
    </div>
    <div class="footer">信息显示</div>
</div>
{% endblock %}
