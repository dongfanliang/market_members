{% extends "base_site.html" %}
{% block content %}
<script type="text/javascript">
function up( input )
{
        var t=document.getElementById(input).value;
        document.getElementById(input).value=parseInt(t)+1;
}
function down(input)
{
        var t=document.getElementById(input).value;
        if (t != 0)
            document.getElementById(input).value=parseInt(t)-1;
}
</script>
			<div class="conment-title">配置信息</div>
				<div class="conment-div">
					<div class="div">
