<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
<title>方德高可信云平台管理工具</title>
<link href="/media/css/main.css" rel="stylesheet" type="text/css" />
<!–[if IE 6]> 
<script type="text/javascript" src="/media/js/0.0.8a-min.js"></script> 
<script> 
	DD_belatedPNG.fix('.logo, img');  
</script> 
<![end if]–> 
<script src="/media/js/jquery/jquery-1.3.2.min.js" language="javascript"></script>
<script src="/media/js/window.js" language="javascript"></script>
<script src="/media/js/cookie.js" language="javascript"></script>
</head>

<body>
<div class="wrap">
	<div class="header">
    	<div class="logo"><img src="/media/images/logo.png" /></div>
        <div class="logo-font"><span>方德高可信云平台管理工具</span></div>
    	<div class="header-right">
        </div>
    </div>
    <div class="main">
      <div class="conment">
   	  <div class="conment-title">找回密码</div>
            
            <div class="conment-div l-bg">
            	
                <div class="login-div" style="width:auto; margin-left:550px;">
			<form id="getpasswd" class="cmxform" method="post" action="/getpassword/" name="flogin">{% csrf_token %}
				{% if success == 'yes' %}
              	 	<div class = "fi">
               			<label class="error"> &nbsp;&nbsp;&nbsp;感谢您的使用，密码已经发送到您注册的邮箱，请注意查收！</label>
               		</div>
			  {% endif %}
				{% if success == 'no' %}
               		<div class = "fi">
               		<label class="error"> &nbsp;&nbsp;&nbsp;密码或邮箱输入错误，请重新输入！</label>
               		</div>
               {% endif %}

			   <div class="fi">
					<label  width="60px" align="right" >注册用户名：</label>
		<!--			<input type="text" value="" class="ipt-t no-ime" id="username" name="username" tabindex="2" />-->
		               {{form.name}}  
					   {% if form.name.errors %}
					   	{% for error in form.name.errors %}
							 <span class="error" width="60px" >{{error}}</span>
							{% endfor %}
							{% endif %}
			   </div>
			   <div class="fi">
			<label  width="60px" align="right">注册　邮箱：</label>
			<!--		<input value="" id="email" name="email" class="ipt-t no-ime" tabindex="3" />-->
						{{form.email}}  
							{% if form.email.errors %}
							 {% for error in form.email.errors %}
							  <span class="error" >{{error}}</span>
							   {% endfor %}
							    {% endif %}

				</div>
				
				<div class="fi fi-btn">
					<label class="label">&nbsp;</label>&nbsp;
					<input type="submit" value="找回密码" class="btn" tabindex="5" id="" >
  				    <input type="button" value="返回" class="btn" tabindex="6" id="" onclick="window.location='/login/'">
				</div>
				<div style="color:#F00" class="fi fi_jig" id="mes"></div>
			</form>
             	          
                    
                    
                </div>
                
            </div>
            
      </div>
  </div>

</div>
</body>
</html>
