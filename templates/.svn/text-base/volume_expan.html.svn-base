{% extends "base_site.html" %}
{% block content %}
				<div class="conment-title">逻辑卷扩容</div>
				
            <div class="conment-div">
            	
                <div class="div">
			<form id="expanform" action="" method="post">           {% csrf_token %}
                    
                        	<table width="100%" border="0" cellspacing="0" cellpadding="0" class="tab">                           
                              
                              <tbody>
       			<tr>
        			  <th width="15%">逻辑卷ID：</th>
        			  <td>
						{{ volume.id }} 
					  </td>
					</tr>
               <tr>
        			  <th width="15%"> 原大小 (G)：</th>
        			  <td>
						{{ volume.size }} 
					  </td>
					</tr>
					<tr>
        			  <th width="15%"> 修改大小 (G)：</th>
        			  <td>
					  	{{form.newsize}}   {{form.newsize.help_text}}
						{% if form.newsize.errors %}
						     {% for error in form.newsize.errors %}
	                             <span class="error" >{{error}}</span>
	                        {% endfor %}
	                   {% endif %}

					  </td>
					</tr>
			      </tbody>
                            </table>
                        
                        	<div class="div_page">
                           
                                <div class="bn_bn">
                                  <button type="submit" onclick="" class="switch_bn">确定</button>
				  <button type="button" onclick="window.location.href='/volume/'" class="switch_bn">取消</button>
                                </div>
                            </div>
                        
			</form>
                    
                    
                    
                </div>
                
            </div>
            
        </div>
{% endblock %}

