{% extends "base_site.html" %}
{% block content %}
   	  <div class="conment-title">创建Volume</div>
            
            <div class="conment-div">
            	
                <div class="div">
                	
<form action="" method="post" onsubmit="return validate_Volume(this);">
                    
                        	<table width="100%" border="0" cellspacing="0" cellpadding="0" class="tab">                              
<input type="hidden" name="min_hid" value="{{ min_size}}">
{% for field in form %}
       <tr>
	<th width="15%"><span class="error">*</span>大小(GB)：</th>
        <td>{{ field }}  {{ field.help_text }}
		{% for error in field.errors %} 
				<span class="error"> {{error}}</span>
		{% endfor %}
{% endfor %}
      <tr>
         <th><span class="error">*</span>可用域：</th>
         <td><select size="1" id="avail_zone" name="avail_zone">
              <option selected="selected" value="none">请选择</option>
{% for zone in zones %}
         <option value="{{ zone }}">{{ zone }}</option>
{% endfor %}</select></td></tr>
{% if snapshot_id %}
       <tr>
            <th>快照ID：</th>
         <td>
<input type="text" readonly value = "{{snapshot_id}}" id="snapshot_id" name= "snapshot_id"/></td>
{% endif %}
<!--
<select size="1" id="snapshot_id" name="snapshot_id">
              <option selected="selected" value="none">请选择</option>
{% for snapshot in snapshots %}
         <option value="{{ snapshot.id }}">{{ snapshot.id }}</option>
{% endfor %}</select>

</td></tr>
-->
                            </table>                        
                        	<div class="div_page">
                           
                                <div class="bn_bn"><button type="submit" onclick="" class="switch_bn">提交</button><button type="button" onclick="javascript:history.go(-1);" class="switch_bn">返回</button></div>
                            </div>
</form>
                </div>
            </div>
      </div>
{% endblock %}
