{% extends "base_site.html" %}
{% block content %}
<div class="conment">
        	           
            <div class="conment-div">
            	
                <div class="div">
                	
                    <table width="100%" border="0" cellspacing="0" cellpadding="0">
                      <tr>
                        <td width="5" background="images/table/table_l.gif"></td>
                        <td>
                        	<table width="100%" border="0" cellspacing="0" cellpadding="0" class="table">                            
                              <thead>
                                    <tr>
                                      <th colspan="2">物理节点详细信息</th>
                                <!--      <th width="68%" >物理节点1</th>-->
                                    </tr>
                              <tbody>
                           <!--       <tr class="bg-color-b">
                                    <td rowspan="4"><strong>资源的使用情况</strong></td>
                                    <td>CPU使用情况</td>
                                  </tr>
                                  <tr class="bg-color-b">
                                    <td>内存使用情况</td>
                                  </tr>
                                  <tr class="bg-color-a">
                                    <td>硬盘使用情况</td>
                                  </tr>
                                  <tr class="bg-color-b">
                                    <td>其他</td>
                                  </tr>
                                  -->
                                  <tr class="bg-color-b">
                                    <td width="25%"><strong>IP地址</strong></td>
                                    <td>{{ node.ipaddr }}</td>
                                  </tr>
                                  <tr class="bg-color-a">
                                      {% if num == 0 %}
                                      <td ><strong>虚拟机实例及其运行状况</strong></td>
                                      	<td >无</td>
                                      {% else %}
                                    <td rowspan="{{ num }}"><strong>虚拟机实例及其运行状况</strong></td>
                                    	{% endif %}
									
										{% for instance in node.instances %}
											{% if forloop.counter == 1%}
												<td>
													<a href="/instance_info_{{ instance }}">{{ instance }}</a>
												</td>
											</tr>
											{% else %}
											<tr >
                                    		<td><a href="/instance_info_{{ instance }}">{{ instance }}</a></td>
                                		</tr>
											{% endif %}		
										{% endfor %}
										
											
									
                                  <tr class="bg-color-b">
                                    <td><strong>属于区域</strong></td>
                                    <td>{{ node.zone }}</td>
                                  </tr>
                              </tbody>
                          </table>
                        </td>
                        <td width="5" background="images/table/table_r.gif"></td>
                      </tr> 
                      <tr>
                        <td width="5" height="28" background="images/table/table_bl.gif"></td>
                        <td background="images/table/table_bc.gif" height="28">
                        	<div class="div_page">
                           
                                <div class="bn_bn">
								  <button type="back" onclick="window.location='/zoneinfo'" class="switch_bn">返回</button>
                                </div>
                            </div>
                        </td>
                        <td width="5" background="images/table/table_br.gif">&nbsp;</td>
                      </tr>
                    </table>
                </div>
                
            </div>
            
        </div>
    </div>
    <div class="footer">信息显示</div>
</div>
{% endblock %}
