{% extends "base_site.html" %}
{% block content %}
			<div class="conment-title">镜像详细信息</div>
				<div class="conment-div">
					<div class="div">
						<form id="" action="" method="POST"> {% csrf_token %}
							<table width="100%" border="0" cellspacing="0" cellpadding="0" style="font-size:10pt;">
								<tr>
									<td width="5" background="../media/images/table/table_l.gif"></td>
									<td>
										<table width="100%" border="0" cellspacing="0" cellpadding="0" class="tab">										
									<tbody >
										<tr class="bg-color-b">
											<th width="15%">EMI：</th>
											<td>
											{{ image.id }}
											</td>
										</tr>
										<tr class="bg-color-a">
											<th >EKI：</td>
											<td>
												{{ image.kernel_id }}
 											</td>
										</tr> 
										<tr>
											<th class="bg-color-b">ERI：</th>
											<td>{{ image.ramdisk_id }}
											</td>
											
										</tr>
										<tr>
											<th  class="bg-color-a">所有者：</th>
											<td>
											{{ image.ownerId }}
											</td>
										</tr>
										<tr>
											<th class="bg-color-b">Manifest：</th>
											<td>
											{{ image.location  }}
											</td>
										</tr>
										<tr>
											<th class="bg-color-a">镜像大小(GB)：</th>
											<td>
											{{ size }}
											</td>
										</tr>
										<tr>
											<th class="bg-color-b">系统/应用名称：</th>
											<td>
											{{ image.platform  }}
											</td>
										</tr>
										<tr>
											<th class="bg-color-a">系统/应用图标：</th>
											<td>
											{% if image.platform in platforms %}
                                            <img src="../media/images/platform/{{ image.platform }}.jpg">
                                            {% else %}
                                            <img src="../media/images/platform/None.jpg">
                                           {% endif %}

											</td>
										</tr>
										<tr>
											<th class="bg-color-b">状态：</th>
											<td>
											{{ image.state  }}
											</td>
										</tr>
										<tr>
											<th class="bg-color-b" >系统架构：</th>
											<td>
											{{ image.architecture  }}	
											</td>
										</tr>
										<tr>
											<th class="bg-color-a">是否公有：</th>
											<td>
											{% if image.is_public%}
											是
											{% else %}
											否
											{% endif %}
											</td>
										</tr>
										<tr>
											<th class="bg-color-a">镜像描述：</th>
											<td>
									<textarea name="imageinfo" cols ="40" rows = "5" maxlength="50" readonly="readonly">{{ description }}</textarea>											
											</td>
										</tr>
									</tbody>
							</table>
						</td>
					
						<td width="5" background="../media/images/table/table_br.gif">&nbsp;</td></tr>
							<tr>
								<td width="5" height="28" background="../media/images/table/table_bl.gif"></td>
								<td background="../media/images/table/table_bc.gif" height="28">
								<div class="div_page">
									<div align="center" class="bn_bn">
								
                           <input name="button" onclick="javascript:history.go(-1);" type="button" class="switch_bn" value="返回" />
									</div>
								</div>
								</td>
								<td width="5" background="../media/images/table/table_br.gif">&nbsp;</td>
							</tr>
						</table>
					</form>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
