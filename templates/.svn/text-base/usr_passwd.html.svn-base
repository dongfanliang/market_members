{% extends "base_site.html" %}
{% block content %}
<div class="conment">
   	  <div class="conment-title">修改密码</div>
            
            <div class="conment-div">
            	
                <div class="div">
									<form action="" method="post"> {% csrf_token %}
                	
                    
                        	<table width="100%" border="0" cellspacing="0" cellpadding="0" class="tab"> 
                              <tbody>
                                  <tr>
                                    <th width="15%">原始密码：</th>
																		<td>{{ form.oldpasswd }}
																		<span class="error"> {{wrongpass}}</span>
																			{% if form.oldpasswd.errors %}
																			{% for error in form.oldpasswd.errors %}
																			<span class="error" > {{error}} </span>
																			{% endfor %}
																			{% endif %}
																		</td>
                                  </tr>
                                  <tr>
                                    <th>新密码：</th>
																		<td>{{ form.newpasswd1 }}  {{ form.newpasswd1.help_text }} 
																			{% if form.newpasswd1.errors%}
																			{% for error in form.newpasswd1.errors %}
																			<span class="error"> {{error}}</span>
																			{% endfor %}
																			{% endif %}
																		</td>
                                  </tr>
                                  <tr>
                                    <th>重复密码：</th>
																		<td oncopy = "return false" oncontextmenu="return false" onpaste = "return false">{{ form.newpasswd2 }}  {{ form.newpasswd2.help_text }} 
																			{% if form.newpasswd2.errors %}
																			{% for error in form.newpasswd2.errors %}
																			<span class="error" > {{error}} </span>
																			{% endfor %}
																			{% endif %}
																		</td>
                                  </tr>
                              </tbody>
                            </table>                        
                        	<div class="div_page">
                           
                                <div class="bn_bn"><button type="submit" onclick="return checkpass()" class="switch_bn">提交</button></div>
                            </div>
                        

										</form> 
                    
                    
                </div>
                
            </div>
            
      </div>
    </div>
</div>
{% endblock %}

