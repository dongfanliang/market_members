{% extends "base_site.html" %}
{% block content %}
			<div class="conment-title">虚拟机详细信息</div>
				<div class="conment-div">
					<div class="div">
						<form id="" action="" method="POST"> {% csrf_token %}
							<table width="100%" border="0" cellspacing="0" cellpadding="0" style="font-size:10pt;">
								<tr>
									<td width="5" background="../media/images/table/table_l.gif"></td>
									<td>
										<table width="100%" border="0" cellspacing="0" cellpadding="0" class="tab">										
									<tbody>
										<tr class="bg-color-b">
											<th width="15%">ID：</th>
											<td>
											{{ instance.id }} 
											</td>
										</tr>
										<tr class="bg-color-a">
											<th >EMI ：</td>
											<td>
												{{ instance.image_id }}
 											</td>
										</tr> 
										<tr>
											<th class="bg-color-b">EKI：</th>
											<td>{{ instance.kernel }}</td>
											
										</tr>
										<tr>
											<th  class="bg-color-a">ERI：</th>
											<td>
											{{ instance.ramdisk }}
											</td>
										</tr>
										<tr>
                                            <th class="bg-color-b">拥有者：</th>
                                            <td>{{ res.owner_id }}</td>
                                        <tr>
										<tr>
											<th class="bg-color-b">状态：</th>
											<td>
											{{ instance.state  }}
											</td>
										</tr>
										<tr>
											<th class="bg-color-a">公有IP：</th>
											<td>
											{{ instance.public_dns_name  }}
											</td>
										</tr>
										<tr>
											<th class="bg-color-b">私有IP：</th>
											<td>
											{{ instance.private_dns_name  }}
											</td>
										</tr>
										<tr>
											<th class="bg-color-a">密钥对：</th>
											<td>
											{{ instance.key_name  }}
											</td>
										</tr>
										<tr>
											<th class="bg-color-b">资源类型：</th>
											<td>
											{{ instance.instance_type  }}
											</td>
										</tr>
										<tr>
											<th class="bg-color-a">启动时间：</th>
											<td>
											{{ instance.launch_time  }}
											</td>
										</tr>
										<tr>
											<th class="bg-color-b">所在区域：</th>
											<td>
											{{ instance.placement  }}
											</td>
										</tr>
										<tr>
											<th class="bg-color-a">所属安全组：</th>
											<td>
											{% for group in res.groups %}
												<span>{{ group.id }} &nbsp;&nbsp;</span>
											{% endfor %}
											</td>
										</tr>
									</tbody>
							</table>
						</td>
					
						<td width="5" background="../media/images/table/table_br.gif">&nbsp;</td></tr>
							<tr>
								<td width="5" height="28" background="../media/images/table/table_bl.gif"></td>
								<td background="../media/images/table/table_bc.gif" height="28">
								<div class="div_page">
									<div align="center" class="bn_bn">
								
                           <input name="button" onclick="javascript:history.go(-1);" type="button" class="switch_bn" value="返回" />
									</div>
								</div>
								</td>
								<td width="5" background="../media/images/table/table_br.gif">&nbsp;</td>
							</tr>
						</table>
					</form>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
